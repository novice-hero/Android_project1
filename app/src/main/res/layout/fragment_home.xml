<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
    <Button
        android:id="@+id/write_btn_cancel"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@color/hannam"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:text="취소"/>
    <Button
        android:id="@+id/write_btn_send"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@color/hannam"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:text="보내기"/>
    <TextView
        android:id="@+id/write_tv_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="받는 사람"
        android:layout_below="@+id/write_btn_cancel"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/write_et_receiver"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="받는 사람을 입력하세요"
        android:layout_below="@+id/write_btn_cancel"
        android:layout_toRightOf="@+id/write_tv_receiver"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/write_et_title"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/write_tv_receiver"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="제목"
        android:textSize="15dp"/>
    <EditText
        android:id="@+id/write_et_content"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:gravity="top"
        android:layout_below="@+id/write_et_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:hint="내용을 입력하세요"
        android:textSize="15dp" />
</RelativeLayout>